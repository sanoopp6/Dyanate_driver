<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:contentPadding="1dp"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#dbdaea"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/txt_pic_no"
                    android:layout_width="30dp"
                    android:text="1"
                    android:gravity="center"
                    android:layout_height="30dp"
                    android:background="@drawable/layout_round_marker_white"
                    android:layout_margin="10dp"
                    android:textColor="@color/blackColorText"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/img_upload_file"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal"
                    android:padding="5dp"
                    android:src="@drawable/logo_1" />

            </LinearLayout>

            <TextView
                android:textAlignment="center"
                android:id="@+id/txt_pic_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="12sp" />

            <TextView
                android:textAlignment="center"
                android:id="@+id/txt_remove_pic"
                android:layout_width="match_parent"
                android:textColor="@android:color/holo_red_dark"
                android:text="@string/remove"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="12sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>