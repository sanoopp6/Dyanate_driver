<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".views.SupportWindowActivity">

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content">

        <!--<LinearLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:orientation="vertical"-->
            <!--android:layout_height="wrap_content">-->

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:gravity="center"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:orientation="vertical"
                android:background="@drawable/btn_new_orders"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo_1" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:textColor="@color/whiteColorText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/registration_successful_please_contact_office" />

                <View
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/light_gray" />

                <TextView
                    android:id="@+id/textview_supportno"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textDirection="ltr"
                    android:textColor="@color/whiteColorText"
                    android:text="@string/support_no"/>
                <!--android:autoLink="phone"-->

                <TextView
                    android:id="@+id/textview_supportmail"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/whiteColorText"
                    android:text="@string/support_email"/>
                <!--android:autoLink="email"-->

            </LinearLayout>

