<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".views.ConfirmDetailsActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/trip_det_title"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:text="@string/trip_details"
                android:layout_height="25dp" />

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:id="@+id/sub_title"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:text="@string/subject"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/ship_title"
                android:layout_width="match_parent"
                android:text="@string/shipment"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="25dp" />

            <!--<TextView-->
                <!--android:id="@+id/model_title"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_marginLeft="15dp"-->
                <!--android:layout_marginRight="15dp"-->
                <!--android:gravity="center_vertical"-->
                <!--android:text="@string/vehicle_type"-->
                <!--android:layout_height="25dp" />-->

            <!--<TextView-->
                <!--android:id="@+id/type_title"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_marginLeft="15dp"-->
                <!--android:layout_marginRight="15dp"-->
                <!--android:gravity="center_vertical"-->
                <!--android:text="@string/vehicle_model"-->
                <!--android:layout_height="25dp" />-->

            <View
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:background="@color/light_gray"
                android:layout_height="2dp" />

            <TextView
                android:id="@+id/sender_det_title"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:text="@string/from_address"
                android:layout_height="25dp" />

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:id="@+id/text_from_name"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="@string/name"
                android:gravity="center_vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/mobile"
                    android:gravity="center_vertical"
                    android:id="@+id/title_from_mobile" />

                <!--<ImageView-->
                    <!--android:paddingEnd="5dp"-->
                    <!--android:src="@drawable/country_sa"-->
                    <!--android:layout_width="40dp"-->
                    <!--android:padding="3dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:id="@+id/img_from_mobile"/>-->

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:id="@+id/text_from_mobile" />

            </LinearLayout>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:id="@+id/date_title"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:text="@string/date"
                android:layout_height="25dp" />

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:id="@+id/time_title"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:text="@string/time"
                android:layout_height="25dp" />

            <View
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:background="@color/light_gray"
                android:layout_height="2dp" />

            <TextView
                android:id="@+id/receiver_det_title"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="@string/to_address"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="25dp" />

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:text="@string/name"
                android:id="@+id/text_to_name"
                android:layout_width="match_parent"
                android:layout_height="25dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/mobile"
                    android:gravity="center_vertical"
                    android:id="@+id/title_to_mobile" />

                <!--<ImageView-->
                    <!--android:paddingEnd="5dp"-->
                    <!--android:src="@drawable/country_sa"-->
                    <!--android:layout_width="40dp"-->
                    <!--android:padding="3dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:id="@+id/img_to_mobile"/>-->

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:id="@+id/text_to_mobile" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="15dp"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_confirm_route"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/btn_ok"
                    android:text="@string/confirm_trip"
                    android:textColor="@color/whiteColorText"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_edit_details"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="33dp"
                    android:layout_marginStart="2dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_language"
                    android:text="@string/edit_order"
                    android:textColor="@color/whiteColorText"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
