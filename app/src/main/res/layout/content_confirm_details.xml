<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".views.ConfirmDetailsActivity"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorBorder" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:scaleType="fitCenter"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:alpha="0.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@drawable/logo_1" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    style="@style/FontBoldSixteen"
                    android:text="@string/ShipmentTitle"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/sub_title"
                    style="@style/FontSizeFifteen"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/Subject"
                    android:layout_height="25dp" />

                <TextView
                    android:id="@+id/ship_title"
                    android:layout_width="match_parent"
                    android:text="@string/Shipment"
                    style="@style/FontSizeFifteen"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="25dp" />

                <TextView
                    android:id="@+id/model_title"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    style="@style/FontSizeFifteen"
                    android:gravity="center_vertical"
                    android:text="@string/Size"
                    android:layout_height="25dp" />

                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:background="@color/darkest_gray"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/sender_det_title"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    style="@style/FontBoldSixteen"
                    android:text="@string/SenderDetails"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/text_from_name"
                    android:layout_width="match_parent"
                    style="@style/FontSizeFifteen"
                    android:layout_height="25dp"
                    android:text="@string/Name"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    style="@style/FontSizeFifteen"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/Mobile"
                    android:layout_marginRight="15dp"
                    android:id="@+id/text_from_mobile" />

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/date_title"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/Date"
                    style="@style/FontSizeFifteen"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/time_title"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/Time"
                    style="@style/FontSizeFifteen"
                    android:layout_height="25dp" />

                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:background="@color/darkest_gray"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/receiver_det_title"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/ReceiverDetails"
                    style="@style/FontBoldSixteen"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/Name"
                    style="@style/FontSizeFifteen"
                    android:id="@+id/text_to_name"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"/>

                <TextView
                    android:layout_width="match_parent"
                    style="@style/FontSizeFifteen"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/Mobile"
                    android:layout_marginRight="15dp"
                    android:id="@+id/text_to_mobile" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="15dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_confirm_route"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="33dp"
                        android:background="@drawable/button_green_rounded"
                        android:text="@string/ConfirmTrip"
                        android:textColor="@color/whiteColor"
                        style="@style/FontBoldSixteen" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/btn_edit_details"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="33dp"
                        android:background="@drawable/button_grey_rounded"
                        android:text="@string/EditOrder"
                        android:textColor="@color/whiteColor"
                        style="@style/FontBoldSixteen" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorBorder" />
    <View
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorFooter" />

</LinearLayout>
