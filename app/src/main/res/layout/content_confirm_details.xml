<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".views.ConfirmDetailsActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/subjectTextView"
            style="@style/FontSizeFifteen"
            android:layout_width="match_parent"
            android:text="@string/Subject"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/lightBlueColor"
            android:id="@+id/shipmentTitleTextView"
            android:layout_width="match_parent"
            android:text="@string/Shipment"
            style="@style/FontSizeFifteen"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="30dp" />

        <TextView
            android:textAlignment="viewStart"
            android:textColor="@color/darkest_gray"
            android:id="@+id/shipmentTextView"
            android:layout_width="match_parent"
            style="@style/FontSizeFifteen"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_height="wrap_content" />

        <!--<TextView-->
            <!--android:id="@+id/vehicleTextView"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--style="@style/FontSizeFifteen"-->
            <!--android:text="@string/Size"-->
            <!--android:layout_height="wrap_content" />-->

        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:background="@color/darkest_gray"
            android:layout_height="1dp" />

        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/lightBlueColor"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            style="@style/FontSizeSixteen"
            android:textStyle="bold"
            android:text="@string/SenderDetails"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/lightBlueColor"
                android:id="@+id/fromNameTitleTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/FontSizeFifteen"
                android:layout_height="30dp"
                android:text="@string/Name" />

            <TextView
                android:textColor="@color/lightBlueColor"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/FontSizeFifteen"
                android:layout_height="30dp"
                android:text="@string/Mobile"
                android:id="@+id/fromMobTitleTextView" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textAlignment="viewStart"
                android:textColor="@color/darkest_gray"
                android:id="@+id/fromNameTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/FontSizeFifteen"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/darkest_gray"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/FontSizeFifteen"
                android:layout_height="wrap_content"
                android:id="@+id/fromMobTextView" />

        </LinearLayout>

        <TextView
            android:textColor="@color/lightBlueColor"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:text="@string/DateAndTime"
            style="@style/FontSizeFifteen"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/lightBlueColor"
                android:id="@+id/engDateTitleTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/FontSizeFifteen"
                android:layout_height="30dp"
                android:text="@string/Date" />

            <TextView
                android:textColor="@color/lightBlueColor"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/FontSizeFifteen"
                android:layout_height="30dp"
                android:text="@string/Date"
                android:id="@+id/arDateTitleTextView" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/darkest_gray"
                android:id="@+id/engDateTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/FontSizeFifteen"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/darkest_gray"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/FontSizeFifteen"
                android:layout_height="wrap_content"
                android:id="@+id/arDateTextView" />

        </LinearLayout>

        <TextView
            android:textAlignment="viewStart"
            android:textColor="@color/lightBlueColor"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/timeTitleTextView"
            android:layout_width="match_parent"
            android:text="@string/Time"
            style="@style/FontSizeFifteen"
            android:layout_height="30dp" />

        <TextView
            android:textColor="@color/darkest_gray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/timeTextView"
            android:layout_width="match_parent"
            style="@style/FontSizeFifteen"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:background="@color/darkest_gray"
            android:layout_height="1dp" />

        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/lightBlueColor"
            android:layout_width="match_parent"
            android:text="@string/ReceiverDetails"
            style="@style/FontSizeSixteen"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/lightBlueColor"
                android:id="@+id/toNameTitleTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/FontSizeFifteen"
                android:layout_height="30dp"
                android:text="@string/Name" />

            <TextView
                android:textColor="@color/lightBlueColor"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/FontSizeFifteen"
                android:layout_height="30dp"
                android:text="@string/Mobile"
                android:id="@+id/toMobTitleTextView" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textAlignment="viewStart"
                android:textColor="@color/darkest_gray"
                android:id="@+id/toNameTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/FontSizeFifteen"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/darkest_gray"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/FontSizeFifteen"
                android:layout_height="wrap_content"
                android:id="@+id/toMobTextView" />

        </LinearLayout>

        <Button
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/confirmTripButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/blueColor"
            android:text="@string/ConfirmTrip"
            android:textColor="@color/whiteColor"
            style="@style/FontSizeSixteen" />

        <!--<Button-->
        <!--android:id="@+id/btn_edit_details"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_weight="1"-->
        <!--android:layout_height="33dp"-->
        <!--android:background="@drawable/layout_rect_grey_rounded"-->
        <!--android:text="@string/EditOrder"-->
        <!--android:textColor="@color/whiteColor"-->
        <!--style="@style/FontSizeSixteen" />-->

    </LinearLayout>

</LinearLayout>
