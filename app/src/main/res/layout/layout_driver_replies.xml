<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:padding="2dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        card_view:cardBackgroundColor="@color/colorBG">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lighter_gray"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:background="@color/colorBGMenu"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txt_order_no"
                    style="@style/FontBoldSixteen"
                    android:textColor="@color/whiteColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/txt_date"
                    style="@style/FontSizeFourteen"
                    android:textColor="@color/whiteColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/Driver"
                        android:textColor="@color/blackColor"
                        style="@style/FontSizeTwelve"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text_driver"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/blackColor"
                            style="@style/FontSizeTwelve"
                            android:layout_height="0dp" />

                        <TextView
                            android:id="@+id/text_driver_no"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="0dp"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/blackColor"
                            style="@style/FontSizeTwelve" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/DistanceToDriverInKM"
                        android:textColor="@color/blackColor"
                        style="@style/FontSizeTwelve" />

                    <TextView
                        android:id="@+id/text_distance"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blackColor"
                        style="@style/FontSizeTwelve" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/Rate"
                        android:textColor="@color/blackColor"
                        style="@style/FontSizeTwelve" />

                    <EditText
                        android:id="@+id/edittext_rate"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:enabled="false"
                        android:inputType="numberDecimal"
                        android:background="@android:color/transparent"
                        android:textColor="@color/blackColor"
                        style="@style/FontSizeTwelve" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/Negotiable"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blackColor"
                        style="@style/FontSizeTwelve" />

                    <TextView
                        android:id="@+id/text_negotiable"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blackColor"
                        style="@style/FontSizeTwelve" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/Status"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blackColor"
                        style="@style/FontSizeTwelve" />

                    <TextView
                        android:id="@+id/text_status"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blackColor"
                        style="@style/FontSizeTwelve" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_approve"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/Approve"
                        android:layout_height="33dp"
                        android:layout_marginEnd="2dp"
                        android:background="@drawable/button_green_rounded"
                        android:textColor="@color/whiteColor"
                        style="@style/FontSizeTwelve" />

                    <!--<Button-->
                        <!--android:visibility="gone"-->
                        <!--android:id="@+id/btn_cancel"-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_weight="1"-->
                        <!--android:text="@string/Cancel"-->
                        <!--android:layout_height="33dp"-->
                        <!--android:layout_marginEnd="2dp"-->
                        <!--android:background="@drawable/btn_red_rounded"-->
                        <!--android:textColor="@color/whiteColor"-->
                        <!--style="@style/FontSizeTwelve" />-->

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>