    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/glass_fact_frame"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_agree_order"
        android:clipChildren="false">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/whiteColorText"
            android:text="@string/glass_factory"
            android:background="@android:color/transparent"
            android:textAllCaps="true"
            android:textSize="17sp"
            android:id="@+id/glass_fact_button"/>

        <TextView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="end|center_vertical"
            android:id="@+id/glass_fact_count"
            android:gravity="center"
            android:textColor="@color/blackColorText"
            android:visibility="gone"
            android:background="@drawable/layout_round_marker_white"
            android:layout_marginEnd="25dp"/>

    </FrameLayout>

