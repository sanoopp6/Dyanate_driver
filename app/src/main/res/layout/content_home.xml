    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_all_orders"
        android:clipChildren="false">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/whiteColorText"
            android:text="@string/other_customers"
            android:background="@android:color/transparent"
            android:textAllCaps="true"
            android:textSize="17sp"
            android:id="@+id/other_cus_button"/>

        <TextView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="end|center_vertical"
            android:id="@+id/other_cus_count"
            android:gravity="center"
            android:textColor="@color/blackColorText"
            android:visibility="gone"
            android:background="@drawable/layout_round_marker_white"
            android:layout_marginEnd="25dp"/>

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_height="35dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:textColor="@color/whiteColorText"
        android:text="@string/make_online"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:textAllCaps="true"
        android:textSize="17sp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_not_agree_order"
        android:id="@+id/make_online_button"/>

