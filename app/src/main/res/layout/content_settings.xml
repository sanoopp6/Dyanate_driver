<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".views.SettingsActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_change_lang"
        android:layout_marginTop="10dp"
        android:textColor="@color/darkest_gray"
        style="@style/FontSizeSixteen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="@string/SwitchLang"
        android:textAlignment="viewStart" />

    <Button
        android:textColor="@color/lightBlueColor"
        android:textAllCaps="false"
        android:id="@+id/btn_change_lang"
        android:text="@string/Language"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:textAlignment="viewStart"
        style="@style/FontSizeFourteen"
        android:layout_height="33dp" />

    <View
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darkest_gray" />

</LinearLayout>