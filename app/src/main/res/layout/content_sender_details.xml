            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@drawable/layout_border_grey_transparent_squre" >

                <EditText
                    android:gravity="center"
                    android:id="@+id/edit_to_mobile"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="@string/mobile"
                    android:textDirection="ltr"
                    android:singleLine="true"
                    android:inputType="phone"
                    android:background="@android:color/transparent"
                    android:layout_height="match_parent"
                    android:paddingStart="30dp"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/img_to_mobile"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/address_book"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <Button
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/btn_book_vehicle"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@drawable/btn_lightblue_rounded"
                android:text="@string/str_continue"
                android:textColor="#FFF"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
