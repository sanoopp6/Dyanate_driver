            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:id="@+id/date_title"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:text="@string/date"
                android:layout_height="25dp" />

            <LinearLayout
                android:id="@+id/date_layout"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layoutDirection="ltr"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="33dp">

                <Button
                    android:id="@+id/txt_datepicker1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/layout_border_grey_transparent_squre"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:layout_marginEnd="5dp"
                    android:drawableEnd="@drawable/des_11"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/txt_datepicker2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/layout_border_grey_transparent_squre"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:layout_marginStart="5dp"
                    android:drawableEnd="@drawable/des_11"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:id="@+id/time_title"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:text="@string/time"
                android:layout_height="25dp" />

            <LinearLayout
                android:id="@+id/time_layout"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="33dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/layout_border_grey_transparent_squre"
                    android:layout_height="33dp">

                    <Button
                        android:id="@+id/txt_timepicker"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:padding="7dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/spinner_arrow"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@drawable/layout_gradient_background"
                android:layout_width="match_parent"
                android:layout_height="25dp">

                <TextView
                    android:id="@+id/receiver_det_title"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/receiver_is"
                    android:paddingStart="10dp"
                    android:paddingEnd="5dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <EditText
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:id="@+id/edit_to_name"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:gravity="center"
                android:hint="@string/name"
                android:background="@drawable/layout_border_grey_transparent_squre"
                android:inputType="text"
                android:singleLine="true"
                android:padding="5dp"
                android:textSize="14sp" />

