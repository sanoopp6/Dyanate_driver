<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".views.SenderDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:background="@drawable/layout_gradient_background"
                android:layout_height="25dp">

                <TextView
                    android:id="@+id/sender_det_title"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="5dp"
                    android:text="@string/sender_is"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <EditText
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:id="@+id/edit_from_name"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:gravity="center"
                android:hint="@string/name"
                android:background="@drawable/layout_border_grey_transparent_squre"
                android:inputType="text"
                android:singleLine="true"
                android:padding="5dp"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@drawable/layout_border_grey_transparent_squre" >

                <EditText
                    android:gravity="center"
                    android:id="@+id/edit_from_mobile"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="@string/mobile"
                    android:textDirection="ltr"
                    android:singleLine="true"
                    android:paddingStart="30dp"
                    android:inputType="phone"
                    android:background="@android:color/transparent"
                    android:layout_height="match_parent"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/img_from_mobile"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/address_book"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <!--<com.fast_prog.dynate.intlphoneinput.IntlPhoneInput-->
