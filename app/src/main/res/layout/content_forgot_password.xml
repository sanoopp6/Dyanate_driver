<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".views.ForgotPasswordActivity"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorBorder" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:scaleType="fitCenter"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:alpha="0.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@drawable/logo_1" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="15dp">

                <LinearLayout
                    android:layoutDirection="ltr"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:clipChildren="false" >

                    <com.hbb20.CountryCodePicker
                        app:ccp_showNameCode = "false"
                        app:ccp_showFlag="false"
                        app:ccp_textSize="15sp"
                        app:ccp_autoFormatNumber="false"
                        app:ccp_autoDetectCountry="false"
                        app:ccp_autoDetectLanguage="true"
                        app:ccp_defaultNameCode="SA"
                        android:textColor="@color/blackColor"
                        android:background="@drawable/layout_border_dark_grey_rounded_transparent_squre"
                        android:id="@+id/countryCodePicker"
                        android:layout_width="75dp"
                        android:layout_height="match_parent" />

                    <View
                        android:id="@+id/view_border"
                        android:layout_width="2dp"
                        android:layout_height="match_parent" />

                    <EditText
                        android:id="@+id/edt_mobile"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/blackColor"
                        android:background="@drawable/layout_border_dark_grey_rounded_transparent_squre"
                        android:textAlignment="center"
                        android:layout_height="match_parent"
                        style="@style/FontSizeFifteen"
                        android:hint="@string/Mobile"
                        android:inputType="phone"
                        android:maxLines="1"/>

                </LinearLayout>

                <Button
                    style="@style/FontBoldSixteen"
                    android:id="@+id/btn_send"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/button_green_rounded"
                    android:text="@string/Send"
                    android:textColor="@color/whiteColor" />

            </RelativeLayout>

        </ScrollView>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorBorder" />
    <View
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorFooter" />

</LinearLayout>
