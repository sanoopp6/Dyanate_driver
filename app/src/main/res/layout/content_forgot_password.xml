<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".views.ForgotPasswordActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="15dp">

            <!--<com.fast_prog.dynate.intlphoneinput.IntlPhoneInput-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="36dp"-->
                <!--android:background="@color/white10"-->
                <!--app:textSize="14sp"-->
                <!--app:textColor="#000000"-->
                <!--android:id="@+id/edt_mobile" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/layout_bordered_rounded_squre" >

                <EditText
                    android:gravity="center"
                    android:id="@+id/edt_mobile"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="050 XXX XXXX"
                    android:singleLine="true"
                    android:textDirection="ltr"
                    android:inputType="phone"
                    android:background="@android:color/transparent"
                    android:layout_height="match_parent"
                    android:textSize="14sp" />

                <!--<ImageView-->
                    <!--android:id="@+id/img_mobile"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:padding="5dp"-->
                    <!--android:scaleType="fitCenter"-->
                    <!--android:src="@drawable/address_book"-->
                    <!--android:layout_height="match_parent" />-->

            </LinearLayout>

            <Button
                android:id="@+id/btn_send"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/btn_ok"
                android:text="@string/send"
                android:textColor="@color/whiteColorText"
                android:textSize="14sp" />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>
