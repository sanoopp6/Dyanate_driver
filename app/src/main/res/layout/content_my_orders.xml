<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/content_cart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".views.MyOrdersActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/layout_search_back"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/enter_port_priority_text_view"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="@drawable/layout_sub_background"
            android:gravity="center"
            android:text="@string/my_orders"
            android:textColor="#FFF"
            android:textSize="16sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_home"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scrollbars="vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"
        android:background="#FFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_no_title_text_view"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/text_view_item_background1"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:text="@string/order_no"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView

            android:id="@+id/order_no_value_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:background="@drawable/text_view_item_background2"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="1dp"
        android:background="#FFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/veh_name_title_text_view"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/text_view_item_background1"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:text="@string/vehicle"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView

            android:id="@+id/veh_name_value_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:background="@drawable/text_view_item_background2"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="1dp"
        android:background="#FFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/from_addr_title_text_view"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/text_view_item_background1"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:text="@string/sender"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView

            android:id="@+id/from_addr_value_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:background="@drawable/text_view_item_background2"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="1dp"
        android:background="#FFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/to_addr_title_text_view"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/text_view_item_background1"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:text="@string/receiver"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/to_addr_value_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:background="@drawable/text_view_item_background2"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="1dp"
        android:background="#FFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date_title_text_view"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/text_view_item_background1"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:text="@string/date"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/date_value_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:background="@drawable/text_view_item_background2"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="1dp"
        android:background="#FFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_title_text_view"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/text_view_item_background1"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:text="@string/time"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/time_value_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:background="@drawable/text_view_item_background2"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="1dp"
        android:background="#FFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/subject_title_text_view"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/text_view_item_background1"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:text="@string/subject"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/subject_value_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:background="@drawable/text_view_item_background2"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="1dp"
        android:background="#FFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notes_title_text_view"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/text_view_item_background1"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:text="@string/shipment"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/notes_value_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:background="@drawable/text_view_item_background2"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="1dp"
        android:background="#FFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/status_title_text_view"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/text_view_item_background1"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:text="@string/status"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="1dp"
            android:paddingStart="10dp"
            android:background="@drawable/text_view_item_background2"
            android:layout_weight="1">

            <TextView
                android:id="@+id/status_value_text_view"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:enabled="false"
        android:id="@+id/show_button"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_viewall_background"
        android:gravity="center"
        android:text="@string/show_details"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:textSize="14sp" />

</LinearLayout>