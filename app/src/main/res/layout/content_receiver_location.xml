    <FrameLayout
        android:id="@+id/map_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipChildren="false">

        <fragment
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-5dp"
            android:clickable="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <ImageView
                android:background="@drawable/layout_transparent_squre_rounded"
                android:id="@+id/image_view_map_change_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_globe_icon" />

            <ImageView
                android:background="@drawable/layout_transparent_squre_rounded"
                android:id="@+id/image_view_current_location_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_gps_current_location" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clipChildren="false">

            <LinearLayout
                android:id="@+id/locationMarker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="35dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/marker_layout"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/layout_round_marker_red"
                    android:clickable="true"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/you_are_here_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/stop_place"
                        android:textColor="@color/whiteColorText"
                        android:textSize="11sp" />

                    <ProgressBar
                        android:id="@+id/progress_bar_marker"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminateTint="#FFF"
                        android:padding="3dp"
                        android:visibility="gone" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="-3dp"
                    app:srcCompat="@drawable/layout_down_arrow_red" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/location_layout"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="top"
                android:layout_marginTop="-55dp"
                android:background="@drawable/btn_black_rounded"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/text_view_location_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:freezesText="true"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:padding="5dp"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textColor="#FFF"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical|right|end"
                    android:padding="3dp"
                    android:src="@drawable/ic_circled_user_male_24" />
            </LinearLayout>

        </FrameLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/whiteColorBackground"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/location_select_gps_image_view"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_gps_current_location" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/type_location_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/type_your_location" />

            <TextView
                android:id="@+id/text_view_province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darker_gray"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/search_location_image_view"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:tint="@color/blackColorBackground"
            android:scrollHorizontally="true"
            android:src="@android:drawable/ic_menu_search" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:tint="@color/blackColorBackground"
            android:src="@drawable/des_8"/>

        <ImageView
            android:id="@+id/bookmark_location_image_view"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:scrollHorizontally="true"
            android:tint="@color/blackColorBackground"
            android:src="@drawable/ic_bookmark" />

    </LinearLayout>

