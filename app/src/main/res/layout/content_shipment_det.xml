<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".views.ShipmentDetActivity"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorBorder" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:scaleType="fitEnd"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:alpha="0.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@drawable/logo_1" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="35dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:gravity="center_vertical"
                        style="@style/FontSizeFifteen"
                        android:text="@string/Subject"
                        android:layout_height="match_parent" />

                    <EditText
                        android:id="@+id/edit_subject"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/layout_border_dark_grey_rounded_transparent_squre"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        style="@style/FontSizeFifteen" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/Shipment"
                    style="@style/FontSizeFifteen"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:background="@drawable/layout_border_dark_grey_rounded_transparent_squre"
                    android:id="@+id/edit_shipment"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/FontSizeFifteen"
                    android:lines="3" />

                <Button
                    android:id="@+id/btn_book_vehicle"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_lightblue_rounded"
                    android:text="@string/Continue"
                    style="@style/FontBoldSixteen"
                    android:textColor="@color/whiteColor" />

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorBorder" />
    <View
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorFooter" />

</LinearLayout>
