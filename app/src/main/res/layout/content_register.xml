<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".views.RegisterActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="125dp">

            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/background_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ic_parking_worker"
                android:layout_width="75dp"
                android:layout_height="75dp" />

        </FrameLayout>

        <ImageView
            android:layout_marginTop="35dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_blue_triangle"
            android:layout_width="50dp"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/userTypeTextView"
            android:layout_marginTop="-60dp"
            android:textAllCaps="true"
            android:gravity="center"
            style="@style/FontSizeFifteen"
            android:textColor="@color/whiteColor"
            android:text="@string/Driver"
            android:background="@color/blueColor"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <EditText
            android:layout_marginTop="35dp"
            android:hint="@string/Name"
            android:textColor="@color/blackColor"
            android:id="@+id/editText_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/layout_rect_transparent_grey"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:maxLines="1"
            android:textAlignment="center"
            android:inputType="text"
            style="@style/FontSizeFifteen" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/textView_nameError"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:textColor="@color/redColor"
            android:gravity="start|center_vertical"
            style="@style/FontSizeTwelve" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layoutDirection="ltr"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clipChildren="false" >

            <com.hbb20.CountryCodePicker
                app:ccp_showNameCode = "false"
                app:ccp_showFlag="false"
                app:ccp_textSize="15sp"
                app:ccp_autoFormatNumber="false"
                app:ccp_autoDetectCountry="false"
                app:ccp_autoDetectLanguage="true"
                app:ccp_defaultNameCode="SA"
                android:gravity="center"
                android:textColor="@color/blackColor"
                android:background="@drawable/layout_rect_transparent_grey"
                android:id="@+id/countryCodePicker"
                android:layout_width="75dp"
                android:layout_height="match_parent" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent" />

            <EditText
                android:hint="@string/Mobile"
                android:textColor="@color/blackColor"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:background="@drawable/layout_rect_transparent_grey"
                android:id="@+id/editText_mobile"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="match_parent"
                style="@style/FontSizeFifteen"
                android:inputType="phone"
                android:maxLines="1"/>

        </LinearLayout>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/textView_mobileError"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:textColor="@color/redColor"
            android:gravity="start|center_vertical"
            style="@style/FontSizeTwelve" />

        <EditText
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="@string/Email"
            android:textColor="@color/blackColor"
            android:id="@+id/editText_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLines="1"
            android:background="@drawable/layout_rect_transparent_grey"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            style="@style/FontSizeFifteen" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/textView_emailError"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:textColor="@color/redColor"
            android:gravity="start|center_vertical"
            style="@style/FontSizeTwelve" />

        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="@string/Address"
            android:textColor="@color/blackColor"
            android:id="@+id/button_address"
            style="@style/FontSizeFifteen"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/layout_rect_transparent_grey"
            android:maxLines="1"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textAllCaps="false"
            android:textAlignment="center" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/textView_addressError"
            style="@style/FontSizeTwelve"
            android:layout_width="match_parent"
            android:textColor="@color/redColor"
            android:layout_height="18dp"
            android:background="@android:color/transparent"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:textAlignment="viewStart" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/blackColor"
            android:id="@+id/textView_vehicleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:text="@string/Vehicle"
            android:textAlignment="viewStart"
            android:gravity="start|center_vertical"
            style="@style/FontSizeTwelve" />

        <Spinner
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/spnr_vehicleSize"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            style="@style/FontSizeFifteen"
            android:background="@drawable/layout_rect_transparent_grey" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/textView_vehicleSizeError"
            style="@style/FontSizeTwelve"
            android:layout_width="match_parent"
            android:textColor="@color/redColor"
            android:layout_height="18dp"
            android:background="@android:color/transparent"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:textAlignment="viewStart" />

        <Spinner
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/spnr_vehicleMake"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            style="@style/FontSizeFifteen"
            android:background="@drawable/layout_rect_transparent_grey" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/textView_vehicleMakeError"
            style="@style/FontSizeTwelve"
            android:layout_width="match_parent"
            android:textColor="@color/redColor"
            android:layout_height="18dp"
            android:background="@android:color/transparent"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:textAlignment="viewStart" />

        <Spinner
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/spnr_vehicleModel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            style="@style/FontSizeFifteen"
            android:background="@drawable/layout_rect_transparent_grey" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/textView_vehicleModelError"
            style="@style/FontSizeTwelve"
            android:layout_width="match_parent"
            android:textColor="@color/redColor"
            android:layout_height="18dp"
            android:background="@android:color/transparent"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:textAlignment="viewStart" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/blackColor"
            android:id="@+id/textView_withCompany"
            style="@style/FontSizeTwelve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="start|center_vertical"
            android:text="@string/RegisteringUnderCompany"
            android:textAlignment="viewStart" />

        <RadioGroup
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/radioGroup_withCompany"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="1dp"
            android:background="@drawable/layout_rect_switch_yes"
            android:checkedButton="@+id/radioButton_no_company"
            android:orientation="horizontal">

            <RadioButton
                android:textColor="@color/colorToggleGreen"
                android:id="@+id/radioButton_yes_company"
                style="@style/FontSizeFourteen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/layout_rect_switch_yes_no"
                android:button="@null"
                android:gravity="center"
                android:text="@string/Yes" />

            <RadioButton
                android:textColor="@color/whiteColor"
                android:id="@+id/radioButton_no_company"
                style="@style/FontSizeFourteen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/layout_rect_switch_yes_no"
                android:button="@null"
                android:gravity="center"
                android:text="@string/No" />

        </RadioGroup>

        <Spinner
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/spnr_withCompany"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            style="@style/FontSizeFifteen"
            android:background="@drawable/layout_rect_transparent_grey" />

        <TextView
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/textView_withCompanyError"
            style="@style/FontSizeTwelve"
            android:layout_width="match_parent"
            android:textColor="@color/redColor"
            android:layout_height="18dp"
            android:background="@android:color/transparent"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:textAlignment="viewStart" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/blackColor"
            android:id="@+id/textView_withGlass1"
            style="@style/FontSizeTwelve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="start|center_vertical"
            android:textAlignment="viewStart" />

        <RadioGroup
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/radioGroup_withGlass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="1dp"
            android:background="@drawable/layout_rect_switch_yes"
            android:checkedButton="@+id/radioButton_no_glass"
            android:orientation="horizontal">

            <RadioButton
                android:textColor="@color/colorToggleGreen"
                android:id="@+id/radioButton_yes_glass"
                style="@style/FontSizeTwelve"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/layout_rect_switch_yes_no"
                android:button="@null"
                android:gravity="center"
                android:text="@string/Yes" />

            <RadioButton
                android:textColor="@color/whiteColor"
                android:id="@+id/radioButton_no_glass"
                style="@style/FontSizeTwelve"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/layout_rect_switch_yes_no"
                android:button="@null"
                android:gravity="center"
                android:text="@string/No" />

        </RadioGroup>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/chk_i_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="10dp" />

            <TextView
                android:textColor="@color/blackColor"
                android:id="@+id/txt_i_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/IAgreeTo"
                android:paddingStart="2dp"
                style="@style/FontSizeTwelve"
                android:layout_gravity="bottom" />

            <TextView
                android:textColor="@color/edit_text_focused_color"
                android:id="@+id/txt_terms_conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                style="@style/FontSizeTwelve"
                android:layout_gravity="bottom"
                android:text="@string/TermsAndConditions"/>

        </LinearLayout>

        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            style="@style/FontSizeSixteen"
            android:textColor="@color/whiteColor"
            android:background="@color/blueColor"
            android:text="@string/Register" />

    </LinearLayout>

</ScrollView>
