                    <View
                        android:layout_width="35dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/textView_vehicleModelError"
                        style="@style/FontSizeTwelve"
                        android:layout_width="0dp"
                        android:textColor="@color/redColor"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="start|center_vertical"
                        android:maxLines="2"
                        android:textAlignment="viewStart" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="35dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:textColor="@color/blackColor"
                        android:id="@+id/textView_withCompany"
                        style="@style/FontSizeTwelve"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="start|center_vertical"
                        android:text="@string/RegisteringUnderCompany"
                        android:textAlignment="viewStart" />

                    <RadioGroup
                        android:id="@+id/radioGroup_withCompany"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:padding="1dp"
                        android:background="@drawable/button_yes_switch"
                        android:checkedButton="@+id/radioButton_no_company"
                        android:orientation="horizontal">

                        <RadioButton
                            android:textColor="@color/colorToggleGreen"
                            android:id="@+id/radioButton_yes_company"
                            style="@style/FontSizeTwelve"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/toggle_button_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="@string/Yes" />

                        <RadioButton
                            android:textColor="@color/whiteColor"
                            android:id="@+id/radioButton_no_company"
                            style="@style/FontSizeTwelve"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/toggle_button_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="@string/No" />

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/layout_withCompany"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_id_card_24" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/layout_border_dark_grey_rounded_transparent_squre">

                        <Spinner
                            android:id="@+id/spnr_withCompany"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            style="@style/FontSizeFifteen"
                            android:background="@android:color/transparent" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:padding="7dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_spinner_arrow" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/layout_withCompanyError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp">

                    <View
                        android:layout_width="35dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/textView_withCompanyError"
                        style="@style/FontSizeTwelve"
                        android:layout_width="0dp"
                        android:textColor="@color/redColor"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="start|center_vertical"
                        android:maxLines="2"
                        android:textAlignment="viewStart" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="35dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:textColor="@color/blackColor"
                        android:id="@+id/textView_withGlass1"
                        style="@style/FontSizeTwelve"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="start|center_vertical"
                        android:textAlignment="viewStart" />

                    <RadioGroup
                        android:id="@+id/radioGroup_withGlass"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:padding="1dp"
                        android:background="@drawable/button_yes_switch"
                        android:checkedButton="@+id/radioButton_no_glass"
                        android:orientation="horizontal">

                        <RadioButton
                            android:textColor="@color/colorToggleGreen"
                            android:id="@+id/radioButton_yes_glass"
                            style="@style/FontSizeTwelve"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/toggle_button_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="@string/Yes" />

                        <RadioButton
                            android:textColor="@color/whiteColor"
                            android:id="@+id/radioButton_no_glass"
                            style="@style/FontSizeTwelve"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/toggle_button_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="@string/No" />

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/chk_i_agree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:textColor="@color/blackColor"
                        android:id="@+id/txt_i_agree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/IAgreeTo"
                        android:paddingStart="2dp"
                        style="@style/FontSizeTwelve"
                        android:layout_gravity="bottom" />

                    <TextView
                        android:textColor="@color/edit_text_focused_color"
                        android:id="@+id/txt_terms_conditions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="2dp"
                        style="@style/FontSizeTwelve"
                        android:layout_gravity="bottom"
                        android:text="@string/TermsAndConditions"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    style="@style/FontBoldSixteen"
                    android:textColor="@color/whiteColor"
                    android:background="@drawable/button_lightblue_rounded"
                    android:text="@string/Register" />

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorBorder" />
    <View
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorFooter" />

</LinearLayout>
