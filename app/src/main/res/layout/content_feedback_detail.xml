<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".views.FeedbackDetailActivity" >

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorBorder" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:scaleType="fitEnd"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:alpha="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:src="@drawable/logo_1" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/layout_border_orange_white_squre"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp" >

                    <LinearLayout
                        android:id="@+id/linearLayout_back"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/textView_username"
                            android:layout_width="match_parent"
                            style="@style/FontSizeFourteen"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:textColor="@color/blackColor"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/textView_mobile"
                            android:layout_width="match_parent"
                            style="@style/FontSizeFourteen"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/blackColor"
                            android:layout_marginRight="15dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/textView_date"
                            android:layout_width="match_parent"
                            style="@style/FontSizeFourteen"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:textColor="@color/blackColor"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/light_gray" />

                        <TextView
                            android:layout_width="match_parent"
                            android:text="@string/Message"
                            style="@style/FontSizeTwelve"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:textColor="@color/blackColor"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:maxHeight="200dp"
                            android:padding="3dp"
                            android:id="@+id/textView_message"
                            android:layout_width="match_parent"
                            style="@style/FontSizeFourteen"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:scrollbars = "vertical"
                            android:textColor="@color/blackColor"
                            android:layout_height="wrap_content" />

                        <View
                            android:id="@+id/view_admin_reply"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/light_gray" />

                        <TextView
                            android:text="@string/Reply"
                            android:id="@+id/textView_admin_reply_title"
                            android:layout_width="match_parent"
                            style="@style/FontSizeTwelve"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:textColor="@color/blackColor"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:visibility="gone"
                            android:background="@drawable/button_orange_rounded"
                            android:padding="3dp"
                            android:inputType="text|textMultiLine"
                            android:id="@+id/editText_admin_reply"
                            android:layout_width="match_parent"
                            style="@style/FontSizeFourteen"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:textColor="@color/blackColor"
                            android:layout_height="100dp" />

                        <TextView
                            android:maxHeight="200dp"
                            android:padding="3dp"
                            android:id="@+id/textView_admin_reply"
                            android:layout_width="match_parent"
                            style="@style/FontSizeFourteen"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:scrollbars = "vertical"
                            android:textColor="@color/blackColor"
                            android:layout_height="wrap_content" />

                        <Button
                            android:visibility="gone"
                            android:id="@+id/button_submit"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/button_green_rounded"
                            android:text="@string/Submit"
                            style="@style/FontSizeFourteen"
                            android:textColor="@color/whiteColor" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView_feedbacks_images"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center" />

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorBorder" />
    <View
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorFooter" />

</LinearLayout>