<?xml version="1.0" encoding="UTF-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:toDegrees="360"
    android:pivotX="50%"
    android:pivotY="50%" >
    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="25.0" >
        <gradient
            android:centerColor="@color/progressDialogColor"
            android:endColor="@color/progressDialogColor"
            android:startColor="@color/progressDialogColor"
            android:angle="0"
            android:useLevel="false"
            android:type="sweep" />
    </shape>
</rotate>
