<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FontSizeTen">
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="FontSizeEleven">
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="FontSizeTwelve">
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FontSizeFourteen">
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FontSizeFifteen">
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="FontSizeSixteen">
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FontSizeSeventeen">
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="FontBoldSixteen">
        <item name="android:fontFamily">@font/cairo_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
